<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/inflatable_quiz_stress"
    android:weightSum="30">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:gravity="center"
                    android:text="ឈប់លេង?"
                    android:fontFamily="@font/battambang_regular"
                    android:textColor="@color/white" />
                <ImageView
                    android:layout_marginTop="12dp"
                    android:src="@drawable/below_white"
                    android:layout_width="151dp"
                    android:layout_height="6dp"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_below="@+id/fl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="90dp"
                    android:paddingStart="41dp"
                    android:paddingEnd="41dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/no"
                        android:layout_width="130dp"
                        android:layout_height="65dp"
                        android:gravity="center"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/button_state_sound"
                        android:textColor="@color/white"
                        android:fontFamily="@font/battambang_regular"
                        android:text="បាទ/ចាស"
                        android:textSize="25sp"/>

                    <Button
                        android:id="@+id/yes"
                        android:layout_width="130dp"
                        android:layout_height="65dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:background="@drawable/button_state_red"
                        android:fontFamily="@font/battambang_regular"
                        android:textColor="@color/white"
                        android:text="ទេ"
                        android:textSize="25sp"/>

                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>