<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#3A3D5F"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3A3D5F">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:gravity="center"
                android:text="លេងបន្ត?"
                android:textColor="@color/white" />
            <ImageView
                android:layout_marginTop="12dp"
                android:src="@drawable/below_white"
                android:layout_width="151dp"
                android:layout_height="6dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-2dp"
        android:background="#3A3D5F"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_state_sound"
                    android:minWidth="100dp"
                    android:text="បាទ/ចាស"
                    android:drawableStart="@drawable/ic_close_black_24dp"/>

                <Button
                    android:id="@+id/yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_state_rating"
                    android:minWidth="100dp"
                    android:text="ចេញឥឡូវ"
                    android:drawableStart="@drawable/ic_exit_app"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>