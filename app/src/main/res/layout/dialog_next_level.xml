<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/button_state_rating"
        android:layout_width="match_parent"
        android:layout_height="304dp">
        <TextView
            android:text="អ្នកបានបញ្ចប់ហ្គេមមេរៀនទី 1"
            android:gravity="center"
            android:textSize="21sp"
            android:textColor="#3A3D5F"
            android:fontFamily="@font/battambang_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="12dp"
            android:src="@drawable/below_text_about"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:textColor="#3A3D5F"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/battambang_regular"
            android:text="តើអ្នកចង់បន្តទៅហ្គេមមេរៀនបន្ទាប់ ឬត្រឡប់ទៅកាន់មាតិកាដើមវិញ?"
            android:layout_width="match_parent"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            android:layout_height="wrap_content"/>
        <xiaofei.library.gridlayout.GridLayout
            android:layout_width="match_parent"
            android:layout_marginTop="34dp"
            android:layout_height="wrap_content"
            app:horizontalSpacing="45dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="33dp"
            app:numColumns="2"
            app:numRows="1">

            <TextView
                android:id="@+id/con"
                android:text="មេរៀនបន្ទាប់"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/battambang_regular"
                android:textSize="21sp"
                android:background="@drawable/button_state_list_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/back"
                android:text="មាតិកាដើម"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/battambang_regular"
                android:textSize="21sp"
                android:background="@drawable/button_state_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </xiaofei.library.gridlayout.GridLayout>
    </LinearLayout>
</LinearLayout>