<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id1"
        android:text="Hello world Below!"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/sound_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to play sound 1!"
        android:layout_centerInParent="true"
        android:background="#9999"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/id2"/>
    <Button
        android:id="@+id/sound_click2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to play sound 2!"
        android:layout_centerInParent="true"
        android:background="#9999"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sound_click"/>
    <Button
        android:id="@+id/sound_click3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to play sound 3!"
        android:layout_centerInParent="true"
        android:background="#9999"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sound_click2"/>
    <Button
        android:id="@+id/sound_click4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to play sound 4!"
        android:layout_centerInParent="true"
        android:background="#9999"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sound_click3"/>
    <Button
        android:id="@+id/sound_click5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click to play sound 5!"
        android:layout_centerInParent="true"
        android:background="#9999"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sound_click4"/>

</RelativeLayout>