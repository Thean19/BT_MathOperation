<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/transition_container"
    tools:context=".MainActivity">
    <RelativeLayout
        android:background="@drawable/quinn_with_joker"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="Hello World!"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_below="@+id/id1"
            android:text="Hello world Below!"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/sound_click"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_for_text"
            android:text="click to play sound 1!"
            android:layout_centerInParent="true"
            android:background="@color/button_tint_color"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/id2"/>
        <Button
            android:id="@+id/sound_click2"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_for_text"
            android:text="click to play sound 2!"
            android:layout_centerInParent="true"
            android:background="@color/button_tint_color"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sound_click"/>
        <Button
            android:id="@+id/sound_click3"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_for_text"
            android:text="click to play sound 3!"
            android:layout_centerInParent="true"
            android:background="@color/button_tint_color"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sound_click2"/>
        <Button
            android:id="@+id/sound_click4"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_for_text"
            android:text="click to play sound 4!"
            android:layout_centerInParent="true"
            android:background="@color/button_tint_color"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sound_click3"/>
        <Button
            android:id="@+id/sound_click5"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_for_text"
            android:text="click to play sound 5!"
            android:layout_centerInParent="true"
            android:background="@color/button_tint_color"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sound_click4"/>
        <Button
            android:id="@+id/btn_gone"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/sound_click5"
            android:textColor="#222"
            android:padding="10dp"
            android:text="Click to No sound and Gone Text!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_below="@+id/btn_gone"
            android:layout_marginTop="100dp"
            android:orientation="vertical"
            android:background="#9009"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/show_animation_text"
                android:text="some thing show"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="@color/color_for_text"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <com.tomer.fadingtextview.FadingTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="@color/color_for_text"
                app:texts="@array/show_text"
                app:timeout="500"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>