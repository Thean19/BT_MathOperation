<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calculate_bg"
    tools:context=".Activity_Div.Div_class">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_secondary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <ImageView
                android:id="@+id/back_div"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="50dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:text="Welcome to Div Class"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ln_1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_play"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="@string/lesson"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_practice"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="@string/practice"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_2"
                android:visibility="gone"
                android:layout_below="@+id/ln_1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_Quiz"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="Quiz"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_duel"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="Duel"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_3"
                android:visibility="gone"
                android:layout_below="@+id/ln_2"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_learn"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="Learn"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_test"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="Test"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_4"
                android:visibility="gone"
                android:layout_below="@+id/ln_3"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_exam"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="Exam"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_time"
                    android:background="@drawable/btn_bg_selector_c"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp" >
                    <TextView
                        android:text="Time"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>