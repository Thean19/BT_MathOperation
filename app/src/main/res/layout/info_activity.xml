<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#3A3D5F"
    tools:context=".Activity.Info">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginTop="34dp"
            android:layout_marginStart="42dp"
            android:id="@+id/img_home"
            android:background="@drawable/button_state_rating"
            android:scaleType="centerCrop"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:src="@drawable/img_back"/>

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="95dp"
            android:background="@drawable/button_state_rating"
            android:src="@drawable/ic_settings_black_24dp"
            android:layout_width="123dp"
            android:layout_height="78.73dp"/>
        <ImageView
            android:layout_marginTop="16.96dp"
            android:layout_width="90dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:src="@drawable/below_add"/>

        <Button
            android:id="@+id/about_us"
            android:layout_gravity="center"
            android:text="អំពីយើង"
            android:background="@drawable/button_state_sound"
            android:layout_marginTop="180.96dp"
            android:layout_width="233dp"
            android:layout_height="55dp"/>
        <Button
            android:id="@+id/sponsors"
            android:layout_gravity="center"
            android:text="ម្ចាស់ឧបត្ថម"
            android:background="@drawable/button_state_rating"
            android:layout_marginTop="13dp"
            android:layout_width="233dp"
            android:layout_height="55dp"/>
        <Button
            android:id="@+id/version"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:text="ជំនាន់កម្មវិធី"
            android:background="@drawable/button_state_music"
            android:layout_width="233dp"
            android:layout_height="55dp"/>
    </LinearLayout>

</LinearLayout>