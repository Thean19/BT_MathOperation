<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="342dp"
    android:layout_height="403.87dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/button_state_rating"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:src="@drawable/dear_hapy"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_width="122dp"
        android:layout_height="122dp"/>

    <Button
        android:id="@+id/btnDialogPositive"
        android:layout_marginTop="43dp"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:fontFamily="@font/battambang_regular"
        android:background="@drawable/button_state_sound"
        android:text="តោះទៅកម្រិតបន្ទាប់"
        android:textColor="@color/white"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="31dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/home"
            android:layout_marginEnd="3.8dp"
            android:background="@drawable/button_state_red"
            android:src="@drawable/ic_home"
            android:layout_width="55.48dp"
            android:layout_height="46dp"/>
        <ImageButton
            android:id="@+id/again"
            android:layout_marginStart="3.8dp"
            android:background="@drawable/button_state_red"
            android:src="@drawable/roundss"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:layout_width="55.48dp"
            android:layout_height="46dp"/>
    </LinearLayout>
</LinearLayout>