<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/transition_container"
    tools:context=".Activity.Sound_Activity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_secondary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <ImageView
                android:id="@+id/back"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="50dp"
                android:layout_height="30dp"/>
            <TextView
                android:layout_marginStart="10dp"
                android:text="Sound Class"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:layout_below="@+id/bar_layout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
        <RelativeLayout
            android:layout_below="@+id/bar_layout"
            android:background="@color/sunflower_yellow_500"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ln_1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/sound_click"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_for_text"
                    android:text="click to play sound 1!"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="30dp" />
                <Button
                    android:id="@+id/sound_click2"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_for_text"
                    android:text="click to play sound 2!"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/sound_click3"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_for_text"
                    android:text="click to play sound 3!"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/sound_click4"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_for_text"
                    android:text="click to play sound 4!"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/sound_click5"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_for_text"
                    android:text="click to play sound 5!"
                    android:background="@drawable/bg_button"
                    android:layout_marginTop="10dp" />
                <Button
                    android:id="@+id/btn_gone"
                    android:layout_marginTop="10dp"
                    android:textColor="#222"
                    android:padding="10dp"
                    android:background="@drawable/bg_button"
                    android:text="Click to No sound and Gone Text!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear"
                android:layout_below="@+id/ln_1"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_centerInParent="true"
                android:layout_width="200dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/show_animation_text"
                    android:text="some thing show"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:textColor="@color/red"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"/>
<!--                <com.tomer.fadingtextview.FadingTextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:textSize="20sp"-->
<!--                    android:textColor="@color/color_for_text"-->
<!--                    app:texts="@array/show_text"-->
<!--                    app:timeout="500"/>-->
            </LinearLayout>
        </RelativeLayout>
<!--    </androidx.core.widget.NestedScrollView>-->
</RelativeLayout>