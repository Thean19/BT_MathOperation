        <RelativeLayout
            android:id="@+id/rl_board"
            android:layout_marginTop="100dp"
            android:layout_width="351dp"
            android:background="@drawable/board"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_height="237dp">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/num_top"
                    android:textColor="@color/white"
                    android:text="2  3  9"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/symbol"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/symbol"
                    android:textColor="@color/white"
                    android:text="+"
                    android:textStyle="bold"
                    android:layout_below="@+id/num_top"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/num_bottom"
                    android:textColor="@color/white"
                    android:layout_below="@+id/symbol"
                    android:layout_toEndOf="@id/symbol"
                    android:text="5  6  7"
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line_equal"
                    android:layout_toEndOf="@id/symbol"
                    android:layout_width="85dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/num_bottom"
                    android:background="@color/white" />
                <TextView
                    android:id="@+id/num_result"
                    android:textColor="@color/white"
                    android:layout_below="@+id/line_equal"
                    android:layout_toEndOf="@id/symbol"
                    android:paddingStart="5dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/answer"
            android:gravity="center"
            android:text="ចម្លើយ"
            android:visibility="gone"
            android:textSize="25sp"
            android:fontFamily="@font/battambang_regular"
            android:textColor="@color/white"
            android:layout_below="@+id/rl_board"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:layout_width="153dp"
            android:layout_height="43dp"/>

        <RelativeLayout
            android:id="@+id/number_picker"
            android:layout_below="@+id/answer"
            android:layout_centerInParent="true"
            android:layout_marginTop="57dp"
            android:layout_width="328dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_1"
                android:layout_alignParentStart="true"
                android:layout_width="145.12dp"
                android:text="806"
                android:background="@drawable/button_state_play"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_height="113.05dp"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_state_play"
                android:layout_width="145.12dp"
                android:text="804"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_height="113.05dp"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_below="@+id/btn_1"
                android:background="@drawable/button_state_play"
                android:layout_marginTop="30dp"
                android:text="805"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_alignParentStart="true"
                android:layout_width="145.12dp"
                android:layout_height="113.05dp"/>
            <Button
                android:id="@+id/btn_4"
                android:layout_below="@id/btn_2"
                android:background="@drawable/button_state_play"
                android:layout_marginTop="30dp"
                android:text="807"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_alignParentEnd="true"
                android:layout_width="145.12dp"
                android:layout_height="113.05dp"/>

        </RelativeLayout>
    </RelativeLayout>
</com.luolc.emojirain.EmojiRainLayout>