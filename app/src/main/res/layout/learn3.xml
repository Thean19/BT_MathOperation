<?xml version="1.0" encoding="utf-8"?>
<com.luolc.emojirain.EmojiRainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="#3A3D5F"
    tools:context=".Lesson_learn.Learn">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_back"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_close_black_24dp"
            android:scaleType="centerCrop"
            android:background="@drawable/button_state_rating"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="42dp"
            android:layout_width="52dp"
            android:layout_height="44dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="31dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="46dp">
            <TextView
                android:id="@+id/img_level"
                android:background="@drawable/background_negative"
                android:text="កម្រិត 3"
                android:gravity="center"
                android:textSize="18sp"
                android:fontFamily="@font/battambang_regular"
                android:textColor="@color/white"
                android:layout_width="85dp"
                android:layout_height="46dp"/>
            <LinearLayout
                android:layout_marginStart="46dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="35dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/gradient_level"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_marginStart="22dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/gradient_level"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_marginStart="22dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/gradient_level"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_marginStart="22dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/gradient_level_not_complete"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
            </LinearLayout>
        </LinearLayout>
        <!--        <TextView-->
        <!--            android:id="@+id/level_row"-->
        <!--            android:text="1 / 4"-->
        <!--            android:visibility="gone"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="21sp"-->
        <!--            android:textStyle="bold"-->
