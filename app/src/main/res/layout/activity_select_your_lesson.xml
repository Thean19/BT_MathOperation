<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3D5F"
    tools:context=".Activity.Go_to.Select_your_lesson">

    <ImageView
        android:id="@+id/back"
        android:layout_marginStart="42dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitCenter"
        android:background="@drawable/button_state_rating"
        android:src="@drawable/back_white"
        android:layout_width="52dp"
        android:layout_height="44dp"/>
    <LinearLayout
        android:layout_below="@+id/back"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_about"
            android:text="ជ្រើសរើសមេរៀន"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/battambang_regular"
            android:textSize="24sp"
            android:layout_width="253dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="9dp"
            android:src="@drawable/below_white"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="6dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/relativelayout_level1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="56dp"
                    android:background="@drawable/button_state_play"
                    android:layout_width="327dp"
                    android:layout_height="113.05dp" >

                    <TextView
                        android:background="@drawable/gradient"
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:text="01"
                        android:textColor="#F50057"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="វិធីបូកលេខពីរខ្ទង់នឹងមួយខ្ទង់គ្មានត្រាទុក"
                        android:fontFamily="@font/battambang_regular"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/relativelayout_level2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_state_play"
                    android:layout_width="327dp"
                    android:layout_height="113.05dp" >

                    <TextView
                        android:background="@drawable/gradient"
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:text="02"
                        android:textColor="#F50057"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="វិធីបូកលេខពីរខ្ទង់នឹងមួយខ្ទង់មានត្រាទុក"
                        android:fontFamily="@font/battambang_regular"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/relativelayout_level3"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_state_play"
                    android:layout_width="327dp"
                    android:layout_height="113.05dp" >

                    <TextView
                        android:background="@drawable/gradient"
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:text="03"
                        android:textColor="#F50057"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:text="វិធីបូកលេខពីរខ្ទង់នឹងពីរខ្ទង់គ្មានត្រាទុក"
                        android:fontFamily="@font/battambang_regular"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/relativelayout_level4"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_state_play"
                    android:layout_width="327dp"
                    android:layout_height="113.05dp">

                    <TextView
                        android:background="@drawable/gradient"
                        android:layout_width="61dp"
                        android:layout_height="61dp"
                        android:text="04"
                        android:textColor="#F50057"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:fontFamily="@font/battambang_regular"
                        android:text="វិធីបូកលេខពីរខ្ទង់នឹងពីរខ្ទង់មានត្រាទុក"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>