<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3D5F"
    tools:context=".Activity.Go_to.Lets_start_lesson">

    <ImageView
        android:id="@+id/img_back"
        android:src="@drawable/img_back"
        android:scaleType="centerCrop"
        android:background="@drawable/button_state_rating"
        android:layout_marginTop="32dp"
        android:layout_marginStart="42dp"
        android:layout_width="52dp"
        android:layout_height="44dp"/>

    <ImageView
        android:id="@+id/sounds"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_state_sound"
        android:src="@drawable/on"
        android:scaleType="centerCrop"
        android:layout_width="52dp"
        android:layout_height="44dp"
        android:layout_marginEnd="42dp"
        android:layout_marginTop="32dp"/>
    <LinearLayout
        android:id="@+id/ln_main"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/sounds"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:text="ឧទាហរណ៏១ ៖ ២១ + ៨ = ? "
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="19dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/top_num"
                android:text="២​​  ១"
                android:textSize="21sp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/symbol"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/symbol"
                android:text="+"
                android:layout_marginTop="45dp"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/bottom_num"
                android:text="៨"
                android:textSize="21sp"
                android:layout_marginTop="60dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/symbol"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/ruler"
                android:layout_below="@+id/bottom_num"
                android:src="@drawable/below"
                android:layout_width="60dp"
                android:layout_height="1dp"/>
            <ImageView
                android:src="@drawable/vector"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/bottom_num"
                android:layout_marginTop="30dp"
                android:layout_width="36dp"
                android:layout_height="100dp"/>
            <TextView
                android:id="@+id/answer"
                android:textSize="21sp"
                android:text="២​​  ៩"
                android:layout_toEndOf="@+id/symbol"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_below="@+id/ruler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:background="@drawable/round_image"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="106dp">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="."
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/white"
                    android:text="១ បូក ៨ ស្មើរនឹង ៩ សរសេរលេខ ៩"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="."
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="២ ទម្លាក់ចុះ សរសេរលេខ ២"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:text="ដូចនេះ ២១ + ៨ = ២៩"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginTop="19dp"
            android:background="@drawable/round_image"
            android:layout_width="wrap_content"
            android:layout_height="220dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ln_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="#AD54F3"
                    android:layout_width="match_parent"
                    android:layout_height="46.43dp">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:text="ខ្ទង់ដប់"
                            android:layout_alignParentStart="true"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
    
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:text="ខ្ទង់ដប់"
                            android:layout_alignParentEnd="true"
                            android:textSize="18sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/num_2"
                        android:text="២"
                        android:layout_marginTop="7.74dp"
                        android:layout_marginStart="50dp"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="+"
                        android:id="@+id/symbol_add"
                        android:layout_below="@+id/num_2"
                        android:layout_marginStart="20dp"
                        android:textSize="18sp"
                        android:layout_marginTop="4.42dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_centerInParent="true"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="#AD54F3" />
                    <TextView
                        android:text="២"
                        android:layout_below="@+id/symbol_add"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="64.12dp"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/num_1"
                        android:text="១"
                        android:layout_marginTop="7.74dp"
                        android:layout_marginEnd="50dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/num_8"
                        android:text="៨"
                        android:layout_below="@+id/num_1"
                        android:layout_marginTop="35.38dp"
                        android:layout_marginEnd="50dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="៩"
                        android:layout_below="@+id/num_8"
                        android:layout_marginTop="33.17dp"
                        android:layout_marginEnd="50dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="160dp"
                android:background="#AD54F3" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/start"
        android:text="តោះលេខហ្គេម"
        android:layout_centerInParent="true"
        android:layout_below="@+id/ln_main"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_state_rating"
        android:layout_marginEnd="28dp"
        android:layout_width="233dp"
        android:layout_height="53dp"/>
</RelativeLayout>