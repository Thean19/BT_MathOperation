<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Splash_screen.Splashscreen"
    android:background="#3A3D5F">

    <ImageView
        android:id="@+id/change_pic"
        android:visibility="visible"
        android:src="@drawable/reading_girl"
        android:background="@drawable/gradient_round_green"
        android:padding="3dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/logo_splash"
        android:visibility="gone"
        android:layout_width="120dp"
        android:layout_height="150dp" />
    <TextView
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="កំពុងដំណើរការ"
        android:gravity="center"
        android:fontFamily="@font/battambang_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />
    <ProgressBar
        android:id="@+id/splashProgress"
        android:layout_width="270dp"
        android:layout_height="9dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/radious_color_normal"
        android:layout_marginTop="15dp" />

</LinearLayout>