<?xml version="1.0" encoding="utf-8"?>
<com.luolc.emojirain.EmojiRainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="#3A3D5F"
    tools:context=".Lesson_learn.Learn">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_back"
            android:src="@drawable/ic_exit_app"
            android:scaleType="centerCrop"
            android:background="@drawable/button_state_rating"
            android:layout_marginTop="32dp"
            android:layout_marginStart="42dp"
            android:layout_width="52dp"
            android:layout_height="44dp"/>

        <ImageView
            android:id="@+id/img_level"
            android:layout_marginTop="34dp"
            android:src="@drawable/level_1"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_width="76dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/level_row"
            android:text="១ / ៤"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_below="@+id/img_level"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/sounds"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_state_sound"
            android:src="@drawable/on"
            android:scaleType="centerCrop"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="32dp"/>

        <RelativeLayout
            android:id="@+id/rl_board"
            android:layout_below="@+id/img_back"
            android:layout_marginTop="50dp"
            android:layout_width="351dp"
            android:background="@drawable/board"
            android:layout_centerInParent="true"
            android:layout_height="237dp">
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/num_top"
                    android:textColor="@color/white"
                    android:text="១   ១"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/symbol"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/symbol"
                    android:textColor="@color/white"
                    android:text="+"
                    android:textStyle="bold"
                    android:layout_below="@+id/num_top"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/num_bottom"
                    android:textColor="@color/white"
                    android:layout_below="@+id/symbol"
                    android:layout_toEndOf="@id/symbol"
                    android:text="១   ២"
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:id="@+id/line_equal"
                    android:layout_toEndOf="@id/symbol"
                    android:layout_width="71dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/num_bottom"
                    android:background="@color/white" />
                <TextView
                    android:id="@+id/num_result"
                    android:textColor="@color/white"
                    android:layout_below="@+id/line_equal"
                    android:layout_toEndOf="@id/symbol"
                    android:paddingStart="5dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="36sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/answer"
            android:layout_below="@+id/rl_board"
            android:layout_marginTop="30dp"
            android:src="@drawable/answer_img"
            android:layout_centerInParent="true"
            android:layout_width="153dp"
            android:layout_height="43dp"/>

        <RelativeLayout
            android:layout_below="@+id/answer"
            android:layout_centerInParent="true"
            android:layout_marginTop="41dp"
            android:layout_width="328dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_1"
                android:layout_alignParentStart="true"
                android:layout_width="145.12dp"
                android:text="២២"
                android:background="@drawable/button_state_info"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_height="105.82dp"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_state_info"
                android:layout_width="145.12dp"
                android:text="២៣"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_height="105.82dp"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_below="@+id/btn_1"
                android:background="@drawable/button_state_info"
                android:layout_marginTop="30dp"
                android:text="១៣"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_alignParentStart="true"
                android:layout_width="145.12dp"
                android:layout_height="105.82dp"/>
            <Button
                android:id="@+id/btn_4"
                android:layout_below="@id/btn_2"
                android:background="@drawable/button_state_info"
                android:layout_marginTop="30dp"
                android:text="៣៥"
                android:textColor="@color/white"
                android:textSize="64sp"
                android:layout_alignParentEnd="true"
                android:layout_width="145.12dp"
                android:layout_height="105.82dp"/>

        </RelativeLayout>
    </RelativeLayout>
</com.luolc.emojirain.EmojiRainLayout>