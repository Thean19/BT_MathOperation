<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="22dp" />
                    <padding android:bottom="2dp"/>
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <gradient android:angle="270" android:endColor="#163969" android:startColor="#163969" />
                    <corners android:radius="19dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:top="5px">
                <shape>
                    <padding android:top="2dp" />
                    <gradient android:angle="270" android:endColor="#163969" android:startColor="#163969" />
                    <corners android:radius="19dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#163969" />
                    <corners android:radius="22dp" />
                    <padding android:bottom="2dp"/>
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="2dp" />
                    <gradient android:angle="270" android:endColor="#163969" android:startColor="#163969" />
                    <corners android:radius="19dp" />
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>