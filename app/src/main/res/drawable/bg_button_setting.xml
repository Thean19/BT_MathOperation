<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid
                android:color="#004F81" />
            <stroke android:width="2dp" android:color="@color/black" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#D1493A"
                android:endColor="#D1493A"
                android:angle="270" />
            <stroke android:width="2dp" android:color="@color/black" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>