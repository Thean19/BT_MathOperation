<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/toolbar">

    <ImageButton
        android:id="@+id/settings"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_button_setting"
        android:src="@drawable/ic_settings_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/back"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_state_rating"
        android:src="@drawable/img_back"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <LinearLayout
        android:id="@+id/ln_1"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/settings"
        android:padding="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_sum"
            android:text="@string/sum"
            android:background="@drawable/button_state_rating"
            android:src="@drawable/img_sum_green"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorF7"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageButton
            android:id="@+id/btn_sub"
            android:text="@string/sub"
            android:background="@drawable/button_state_sub"
            android:layout_marginStart="5dp"
            android:src="@drawable/img_sub"
            android:scaleType="centerCrop"
            android:textColor="@color/colorF7"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_2"
        android:padding="5dp"
        android:layout_below="@+id/ln_1"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_mul"
            android:text="@string/mul"
            android:src="@drawable/img_mul"
            android:background="@drawable/button_state_mul"
            android:scaleType="centerCrop"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorF7"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageButton
            android:id="@+id/btn_div"
            android:text="@string/div"
            android:background="@drawable/button_state_info"
            android:src="@drawable/img_div"
            android:scaleType="centerCrop"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorF7"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ln_3"
        android:layout_below="@+id/ln_2"
        android:padding="5dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/btn_fraction"
            android:background="@drawable/button_state_sound"
            android:text="@string/div"
            android:src="@drawable/fraction"
            android:scaleType="centerCrop"
            android:textColor="@color/colorF7"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:text="Go to second"
        android:padding="4dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:background="@drawable/button_state_list_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>